<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:gravity="center_horizontal" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:minHeight="50dp"
        android:src="@drawable/logo" >
    </ImageView>

       <TextView
        android:id="@+id/comoFunciona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      	 android:layout_below="@+id/logo"
        android:paddingLeft="10dp"
        android:text="Escolha o metodo de ordenação:"
        android:textColor="#fff"
        android:textSize="@dimen/indices"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
</RadioGroup>

    <RadioButton
        android:id="@+id/bubbleSort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comoFunciona"
        android:layout_toRightOf="@+id/radioGroup1"
        android:text="Bubble Sort" />
    
       <RadioButton
        android:id="@+id/insertionSort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bubbleSort"
        android:layout_toRightOf="@+id/radioGroup1"
        android:text="Insertion Sort" />
       
        <RadioButton
        android:id="@+id/quickSort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/insertionSort"
        android:layout_toRightOf="@+id/radioGroup1"
        android:text="Quick Sort" />
        
         <RadioButton
        android:id="@+id/shellSort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quickSort"
        android:layout_toRightOf="@+id/radioGroup1"
        android:text="Shell Sort" />
         
             <RadioButton
        android:id="@+id/selectionSort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shellSort"
        android:layout_toRightOf="@+id/radioGroup1"
        android:text="Selection Sort" />

</RelativeLayout>